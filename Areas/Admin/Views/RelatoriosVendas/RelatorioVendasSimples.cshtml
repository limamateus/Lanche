@model IEnumerable<Lanche.Models.TbPedido>

<h2>Pedidos  por periodo</h2>


<nav class="navbar navbar-dark">

    <div class="conteiner-fluid">
        <form class="navbar-form navbar-left">
                          
                    <div class="form-group">

                        <label for="minDate" class="col-lg-6 control-label">Data inicial</label>

                     <div class="form-group">

                            <input type="date" name="minDate" class="form-control" />

                            </div>
                    </div>
                    

                     <div class="form-group">

                        <label for="maxDate" class="col-lg-6 control-label">Data Final</label>

                        <div class="form-group">

                            <input type="date" name="maxDate" class="form-control" />

                           </div>
                    </div> 
                    <br />                      

                            <button type="submit"  class="btn btn-primary">Enviar</button>
                 

        </form>  


    </div>
</nav>

<div class="panel panel-primary">

    <div class="panel-heandig">
        <h3 class="panel-title">Total de pedido : @Model.Count()</h3>
        <h3 class="panel-title">Total de produtos nos pedidos =  @Model.Sum(obj => obj.TotalItensPedido).ToString()  </h3>
        <h3 class="panel-title"> Valor Total  dos Pedidos =@Model.Sum(obj => obj.PedidoTotal).ToString("c")</h3>
    </div>
</div>

<div class="panel-body">

    <div class="table table-striped table-hover">
    
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sobrenome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Endereco1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Endereco2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cep)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PedidoEnviado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PedidoEntregueEm)
            </th>
            
        </tr>
    </thead>

 
    <tbody>
@foreach (var item in Model) {

        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sobrenome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Endereco1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Endereco2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cep)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PedidoEnviado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PedidoEntregueEm)
            </td>
            
        </tr>

        }
        </tbody>

        </table>

    </div> 
</div>

