@model IEnumerable<Lanche.Models.Categoria>



@{

    ViewData["Title"] = @Model;
}


<h2>Categoria</h2>
<br />


<p>
    <a asp-action="Criar">Criar categoria </a>
</p>

<table class="table table-striped table-hover">


    <thead>
        <tr class="sucess">

            <th > @Html.DisplayNameFor(Model=> Model.CategoriaNome)</th>

            <th> @Html.DisplayNameFor(Model=>Model.Descricao)</th>
        </tr>
               

    </thead>



     <tbody>

            @foreach(var item in Model)
            {
                <tr>

                <td>
                    @Html.DisplayFor(modelitem => item.CategoriaNome)
                    </td>

                <td>
                    @Html.DisplayFor(modelitem =>item.Descricao)
                    </td>
                    <td>
                <a  asp-area="Admin" asp-action="Editar" asp-route-id="@item.CategoriaId">Editar</a> |
                <a asp-action="Detalhes" asp-route-id="@item.CategoriaId">Detalhe</a> |
                <a asp-action="Delete" asp-route-id="@item.CategoriaId">Excluir</a>
            </td>

                </tr>

            
            }


        </tbody>



</table>